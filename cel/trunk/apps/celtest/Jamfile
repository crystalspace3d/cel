SubDir TOP apps celtest ;

Application celtst : [ Wildcard *.cpp *.h ] ;
CFlags celtst : "-DLIBDIR='\"$(INSTALLDIR.PLUGIN)/\"'" ;
LinkWith celtst : celtool ;
ExternalLibs celtst : CRYSTAL ;

if $(HAVE_STATIC_PLUGINS) = "yes"
{
