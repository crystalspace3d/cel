if ! $(BUILDTOP)
{
BUILDTOP = . ;
}
                                                                               
# Include config
JAMCONFIG ?= $(BUILDTOP)/Jamconfig ;
include $(JAMCONFIG) ;
if ! $(JAMCONFIG_READ)
{
  EXIT "Couldn't find config. Please configure the project." ;
}

#CFLAGS
COMPILER.CFLAGS += -Wall ;
COMPILER.CFLAGS.debug += -g3 -DCS_DEBUG ;
COMPILER.LFLAGS.debug += -g3 -DCS_DEBUG ;
COMPILER.CFLAGS.optimize += -O3 ;

# we use crystal space everywhere
C++FLAGS += "$(CRYSTAL.CFLAGS)" ;
LINKLIBS += "$(CRYSTAL.LFLAGS)" ;

# we don't link statically
NO_STATIC_LINKING = yes ;

include $(TOP)/mk/jam/build.jam ;

IncludeDir $(TOP) $(TOP)/include ;
