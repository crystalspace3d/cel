      V (.19,.15,.14:1,1) V (-.19,-.14,.14:1,0) V (-.19,-.14,-.14:0,1)
      V (.19,-.14,-.14:1,1) V (.19,-.14,.14:0,0)

      V (-.2,.15,.16:0,0)
      V (-.2,.45,.16:1,0)
      V (.2,.45,.16:0,1)
      V (.2,.15,.16:1,1)
      V (-.2,.15,.14:1,0)
      V (-.2,.45,.14:0,1)
      V (.2,.45,.14:1,1)
      V (.2,.15,.14:0,0)
    )
    ACTION 'default' ( 
      F(fopen,1)
      F(fclosed,2000000000)
