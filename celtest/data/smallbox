      V (-.2,.17,-.15:1,0)
      V (.2,.17,-.15:0,1)
      V (.2,.17,.15:1,1)
      V (-.2,.1505,.15:1,0)
      V (-.2,.1505,-.15:0,1)
      V (.2,.1505,-.15:1,1)
      V (.2,.1505,.15:0,0)
    )
    FRAME 'fopen' (
      V (-.2,.15,.15:0,0) V (-.2,.15,-.15:1,0) V (.2,.15,-.15:0,1)
      V (.2,.15,.15:1,1) V (-.2,-.15,.15:1,0) V (-.2,-.15,-.15:0,1)
      V (.2,-.15,-.15:1,1) V (.2,-.15,.15:0,0)

