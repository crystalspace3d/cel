MESHFACT 'smallbox' (
  PLUGIN ('crystalspace.mesh.loader.factory.sprite.3d')
  PARAMS (
    MATERIAL ('wood')
    FRAME 'fclosed' (
      V (-.2,.15,.15:0,0) V (-.2,.15,-.15:1,0) V (.2,.15,-.15:0,1)
      V (.2,.15,.15:1,1) V (-.2,-.15,.15:1,0) V (-.2,-.15,-.15:0,1)
      V (.2,-.15,-.15:1,1) V (.2,-.15,.15:0,0)

      V (-.19,.15,.14:0,0) V (-.19,.15,-.14:1,0) V (.19,.15,-.14:0,1)
      V (.19,.15,.14:1,1) V (-.19,-.14,.14:1,0) V (-.19,-.14,-.14:0,1)
      V (.19,-.14,-.14:1,1) V (.19,-.14,.14:0,0)

